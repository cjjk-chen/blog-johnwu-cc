<footer itemscope itemtype="https://schema.org/WPFooter"
  id="footer" class="clearfix">
  <div>
    Powered by <a href="https://hexo.io/" class="codename">Hexo</a> - 
    Theme <a href="https://github.com/stkevintan/hexo-theme-material-flow" class="codename" rel="external nofollow noopener noreferrer" target="_blank">MaterialFlow</a>
  </div>

  <div>
    <span>
      Â© <span itemprop="copyrightYear"><%= date(Date.now(), 'YYYY') %></span> 
        <span itemprop="copyrightHolder"><%= config.author %></span>
    </span>

    <% if (theme.social) { %>
      <% theme.social.forEach(function(value, key) {
            if (value.url && value.slug) { %>
        <a itemprop="url" href="<%= value.url %>" class="social <%= value.slug %>"
          target="_blank" rel="external">
          <span class="fa fa-<%= value.slug %>"></span>
        </a>
      <% } }); %>
    <% } %>
  </div>
  
  <div>
      <a itemprop="license" class="license" rel="license" href="https://creativecommons.org/licenses/by-nc-sa/4.0/">
        <img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" />
      </a>
      <br />
      <span id="visits">Visits: <span class="count">--<span></span>
  </div>
</footer>

