<script>
	window.subData = {
		title: "<%= post.title %>",
		tools: true
	};
</script>
<article itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting"
	id="<%= post.layout %>-<%= post.slug %>"
  class="post white-box article-type-<%= post.layout %>">
	<%- partial("article-header", { post: post }) %>	
	<% if(post.toc!==false){ %>
		<section class="toc-wrapper"><%- toc(post.content, { list_number: false }) %></section>
	<% } %> 
	<section class="article typo">
  	<div itemprop="articleBody" class="article-entry">
    	<%- post.content %>
  	</div>
	  <% if (post.tags && post.tags.length) { %>
	  <div itemprop="keywords" class="article-tags tags">
      <% post.tags.each(function(item){ %>
        <a href="<%- url_for(item.path) %>"><%=item.name %></a>
      <%})%>
	  </div>
    <% } %>
		
		<% if(theme.facebook_sdk.enable && theme.facebook_sdk.like_button) { %>
		<div class="fb_like">
			<div class="fb-like" data-layout="button_count" data-share="true"></div>
		</div>
    <% } %>

	<% if(post.prev || post.next){ %>
		<div class="art-item-footer">
				<% if(post.prev){ %>
					<span class="art-item-left">
						<i class="fa fa-angle-left"></i>prev：
						<a itemprop="url" href="<%=url_for(post.prev.path)%>" rel="prev"  title="<%= post.prev.title %>">
							<%= post.prev.title %> 
						</a>
					</span>
				<% } %>
				<% if(post.next){ %>
					<span class="art-item-right">next：
						<a itemprop="url" href="<%=url_for(post.next.path) %>" rel="next"  title="<%= post.next.title %>">
							<%=post.next.title  %>
						</a>
						<i class="fa fa-angle-right"></i>
					</span>
				<%} %>
		</div>
	<%} %>
	</section>
</article>
<% if (post.comments && config.disqus_shortname){ %>
<section itemprop="comment" itemscope itemtype="https://schema.org/Comment" id="comments">
	<div id="disqus_thread"></div>
</section>
<% } %>