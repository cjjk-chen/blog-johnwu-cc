<% if (is_tag()) { %>
  <script>
    window.subData= { title:'Tag : <%= page.tag %>'}
  </script>
<% } else if (is_archive()) { %>
  <script>
    window.subData= { title:'Year : <%= page.year %><%= page.month ? "." + page.month : "" %>'}
  </script>
<% } else if (is_category()) { %>
  <script>
    window.subData= { title:'Category : <%= page.category %>'}
  </script>
<% } %>

<article class="archive-page post article white-box">
  <section class='meta'>
    <h2 class="title">
      <a href="javascript:void(0)">
        Archives
      </a>
    </h2>
  </section>
  <section class="archive">
    <%
      var year = -1, postid = -1;
      site.posts.sort('date', -1).each(function(post) {
        post.year = date(post.date, 'YYYY');
        if (post.year && post.year !== year) {
          year = post.year;
    %>
          <div class="archive-item archive-year mark">
            <a id="archive-year-<%= year %>" href='<%= url_for("/archives/" + year + "/") %>' >
              <%= year %>
            </a>
          </div>
    <%  } %>
        <div class="archive-item archive-post mark">
          <a href="<%= url_for(post.path) %>">
            <time><%= date(post.date, 'MM-DD') %></time>
            <span class="title"><span><%= post.title %></span></span>
          </a>
        </div>
    <% }); %>
  </section>
</article>