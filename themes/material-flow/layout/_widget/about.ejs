<section itemprop="author" itemscope itemtype="http://schema.org/Person"
    class="m_widget about">
    <% if(config.avatar) { %>
        <img itemprop="image" class="avatar waves-image" src="<%= url_for(config.avatar) %>" alt="<%= config.avatar %>" />
    <%} %>
    <div itemprop="name" class="header fa fa-user">
        <%= config.author %>
    </div>
    <div class="content">
        <div class="desc">
            <%= config.description %>
        </div>
    </div>
    <div class="content">
        <div class="social-wrapper">
            <a itemprop="sameAs" href="https://github.com/johnwu1114" class="social github" target="_blank" rel="external">
                <span class="fa fa-github"></span>
            </a>
            <a itemprop="sameAs" href="https://www.linkedin.com/in/johnwu1114" class="social linkedin" target="_blank" rel="external">
                <span class="fa fa-linkedin"></span>
            </a>
            <a itemprop="sameAs" href="/atom.xml" class="social rss" target="_blank" rel="external">
                <span class="fa fa-rss"></span>
            </a>
        </div>
    </div>
</section>